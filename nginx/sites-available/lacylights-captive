# LacyLights Captive Portal Configuration
# This configuration redirects captive portal detection requests to the setup page
# Activated via symlink when AP mode is started

# Captive portal detection endpoints
# These URLs are checked by devices to detect captive portals
# Redirecting them to our setup page triggers the captive portal popup

server {
    listen 80;
    server_name _;

    # Root location serves the frontend app
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Android captive portal detection
    location = /generate_204 {
        return 302 http://192.168.4.1/settings;
    }

    # Apple captive portal detection
    location = /hotspot-detect.html {
        return 302 http://192.168.4.1/settings;
    }

    # Apple additional captive portal check
    location = /library/test/success.html {
        return 302 http://192.168.4.1/settings;
    }

    # Windows captive portal detection
    location = /ncsi.txt {
        return 302 http://192.168.4.1/settings;
    }

    # Windows Network Connectivity Status Indicator
    location = /connecttest.txt {
        return 302 http://192.168.4.1/settings;
    }

    # Firefox captive portal detection
    location = /success.txt {
        return 302 http://192.168.4.1/settings;
    }

    # GraphQL API
    location /graphql {
        proxy_pass http://localhost:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # WebSocket support for subscriptions
        proxy_read_timeout 86400;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://localhost:4000/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
